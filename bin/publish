#!/usr/bin/env bash

TEST=`sds scripts.test`
if [ -n "$TEST" ] ; then
    if ! npm test ; then
        echo '[ERROR] test failed!' | colorcat -sp "(\[)(.+)(\])(.*) . Rfr . Rfy . Rfr . fy" 
        exit 1
    fi
fi

if [ $# -ne 0 ]; then
    `dirname $0`/commit "$*"
fi

set -e

VERSION=`sds version`

echo 'npm publish' | colorcat -sx
npm publish        | colorcat -P `dirname $0`/../cc/npm.noon
