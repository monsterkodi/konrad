#!/usr/bin/env bash
DIR=`dirname $0`
BIN=$DIR/../node_modules/.bin

$DIR/konrad --run

if $DIR/konrad --test; then
    $DIR/commit "$*"
    
    set -e
    
    VERSION=`$BIN/sds version`
    
    echo 'npm publish' | $BIN/colorcat -sx
    npm publish        | $BIN/colorcat -P $DIR/../cc/npm.noon
fi

