#!/usr/bin/env bash
if [ ! -e package.json ]; then
    echo '[ERROR] no package.json!' | colorcat -p "(\[)(.+)(\])(.*) . Rfr . Rfy . Rfr . fy"     
    exit 1
fi
npm prune
ncu -a
npm update
npm update
npm ls -s --depth 0 | colorcat -p "(.──\s)(\S+)(@)([\d\.]+) . xd . g . z . m :: (\S+)(@)([\d\.]+)\s(.*) . yf . z . mf . z"
