#!/usr/bin/env bash

if [ "`sds -rp 'konrad.bump on'`" = "commit" ]; then
    `dirname $0`/bump
fi

if [ $# -eq 0 ]; then
    MSG="v`sds -rp version`"
else
    MSG="$*"
fi

git add .
git status -sb
git commit -m "$MSG" | colorcat -P `dirname $0`/../colorcat/commit.noon

echo -n 'pushing' | colorcat -zf

git push -q
git status -sb
