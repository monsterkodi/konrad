#!/usr/bin/env bash
if [ $# -eq 0 ]; then
    echo '[ERROR] no commit message!' | lolcat -p 0.3
    exit 1
fi

if [ -n "`sds -p konrad.bump on commit`" ]; then
    echo 'do bump'
    `dirname $0`/bump
else
    echo 'no bump'    
fi

git add .
git status -sb
git commit -m "$*"
echo 'pushing'
git push -q
git status -sb
