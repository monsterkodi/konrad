.menuItem
    -webkit-app-region  no-drag
    color               #888
    background-color    titleColor
    
.menuItem.selected
    color               #aaa
    
.menu:focus .menuItem
    color               #888
.menu:focus .menuItem.selected
    color               #fff
        
.menu
    height              titlebarHeight
    pointer-events      auto
    -webkit-app-region  drag
    flex                1 1 0
    display             flex
    flex-direction      row
    
.menuItem
    -webkit-app-region  no-drag
    cursor              pointer
    padding-left        10px
    padding-right       10px
    padding-top         6px
    // font-weight         bold
    display             inline-block
    height              titlebarHeight
    overflow            visible
            
