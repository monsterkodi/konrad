.popup
    z-index             9999
    background-color    frameColor
    position            absolute
    border-radius       3px
    font-size           titlebarFontSize
    font-family         titlebarFont
    // font-weight         bold
    
.popupItem
    padding             2px
    padding-left        2 * frameWidth
    padding-right       2 * frameWidth + 70px
    cursor              pointer
    // color               #888
    &.separator
        padding             0
        cursor              default
        border              0
        height              0
        margin-top          2px
        margin-bottom       2px
        border-top          1px solid #333
    &:not(:last-child)
        border-bottom       1px solid #222
    &.selected
        color           #fff
        & .popupCombo
            color       #888
    &:last-child
        padding-bottom  frameWidth
    &:first-child
        padding-top     frameWidth

.menuItem:active
.popupItem:active
    color               #ff0

.popupCombo
    color               #333
    position            absolute
    right               2 * frameWidth

.popupCombo
    pointer-events      none
    position            absolute
    right               2 * frameWidth
        
