#titlebar
    background          backColor
    color               #333

.dot:hover
    color               #f00

#titlebar .winid
    color               #555
    &.focus
        color           #080

#titlebar .winnum
    color               backColor

#titlebar.focus .winnum
    color               titleColor

.tooltip
    background          frameColor
    
.titlebar-version
    color               #ddd

.titlebar-dot
    color               #eee
    
#titlebar .winbutton
    color               #ddd
    &:active
        color           #000
        background-color #f00
        &.gray
            background-color #ccc
    &:hover
        color           #000
    
