.popup
    background-color    frameColor

.popupWindow
    background-color    frameColor

.popupItem
    color               #888
    &:not(:last-child)
        border-bottom       1px solid frameColor
    &.separator
        border-top          1px solid titleColor
    &.selected
        color           #000
        & .popupCombo
            color       #ccc

.popupItem:active
    color               #000

.popupCombo
    color               #eee
            
