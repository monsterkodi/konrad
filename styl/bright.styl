frameColor  = #fff
titleColor  = #ddd
backColor   = #fff

frameWidth     = 6px
bgColor        = #eee
timeColor      = #aaa
frameBorder    = frameWidth solid frameColor

body
    background          bgColor
    color               #555

#overlay
    background          bgColor

