frameWidth     = 6px
frameColor     = #222
bgColor        = #181818
frameBorder    = frameWidth solid frameColor

body
    background          bgColor
    color               #fff
    
.titlebar
    background          #333
    color               #aaa

.titlebarPath
    color               #888

.titlebarDot
    color               #444

.titlebarVersion
    color               #555

.main
    border-left         frameWidth solid frameColor
    border-right        frameWidth solid frameColor
    border-bottom       frameWidth solid frameColor
    background          bgColor
    color               #aaa

.task .time
    color               #555

.task .file
    color               #ff0

.task .message
    color               #888

