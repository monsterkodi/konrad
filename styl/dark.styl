#titlebar
    background          frameColor
    color               #aaa

.titlebar-version
    color               #555

.titlebar-dot
    color               #333

#titlebar .winbutton
    color               #555
    &:active
        color           #fff
        background-color #f00
        &.gray
            background-color #666
    &:hover
        color           #fff
    
