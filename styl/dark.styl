.popup
    background-color    #222

.popupWindow
    background-color    #222

.popupItem
    color               #888
    &:not(:last-child)
        border-bottom       1px solid #222
    &.selected
        color           #fff
        & .popupCombo
            color       #888
    &.separator
        border-top          1px solid #333
    &:not(:last-child)
        border-bottom       1px solid #222

.popupItem:active
    color               #ff0

.popupCombo
    color               #444
    
