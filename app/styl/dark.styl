frameWidth     = 6px
frameColor     = #222
frameBorder    = frameWidth solid frameColor

body
    background          #000
    color               #fff
    
.titlebar
    background          #333
    color               #aaa

.titlebarPath
    color               #888

.titlebarDot
    color               #444

.titlebarVersion
    color               #555

.main
    border-left         frameWidth solid frameColor
    border-right        frameWidth solid frameColor
    border-bottom       frameWidth solid frameColor
    background          #000
    color               #aaa

.task .time
    color               #555

.task .file
    color               #ff0

.task .message
    color               #888

highlightColor = #89f

@keyframes highlightTime
    0%,100%   
        color           #555
    50%  
        color           highlightColor

@keyframes highlightFile
    0%,100%   
        color           #ff0
    50%  
        color           highlightColor
        
::-webkit-scrollbar-corner
    background-color        #222

::-webkit-scrollbar-thumb
    background-color        #333

::-webkit-scrollbar-thumb
    background-color        #333
    
::-webkit-scrollbar-thumb:hover
    background-color        #b00
    