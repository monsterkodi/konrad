clr                  = {} 
clr.black            = #000000
clr.gray-dark        = #333
clr.white            = #ffffff
clr.yellow           = #ffff00
clr.orange           = #ff8800
clr.blue-medium      = #6666ff

clr.background       = clr.black

body
    font-family         Verdana
    background-color:   clr.background
    color:              clr.white
    
::selection
    color:              clr.yellow

body
    margin              0px
    overflow            hidden
    
a
    text-decoration     none
    color:              clr.blue-medium
    &:hover  
        color:          clr.orange
                
#about
    text-align          center
    position            absolute
    top                 0
    bottom              0
    left                0
    right               0
    border              1px solid #222
    border-radius       5px

#icon
    margin-top          50px
    margin-bottom       10px
    padding-left        30px
    cursor              pointer

#name
    font-weight         bold
    font-size           60px
    display             none
    
#version
    font-size           14px
    color:              clr.gray-dark
    &:hover 
        color:          clr.blue-medium
