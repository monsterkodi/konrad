::-webkit-scrollbar
    width                   frameWidth
::-webkit-scrollbar
    height                  frameWidth  
    background-color        transparent

::-webkit-scrollbar-corner
    background-color        #222

::-webkit-scrollbar-thumb
    background-color        #333

::-webkit-scrollbar-track
    background-color        transparent
    
::-webkit-scrollbar-thumb
    background-color        #333
    
::-webkit-scrollbar-thumb:hover
    background-color        #b00
    