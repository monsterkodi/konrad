frameWidth            = 6px
frameColor            = #222
frameBorder           = frameWidth solid frameColor
titlebarHeight        = 22px
fontMono              = "Menlo", "Cousine", "Liberation Mono", "Andale Mono", monospace

fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0
    
