.main
    position            absolute
    bottom              0
    right               0
    left                0
    top                 titlebarHeight
    
    border-left         frameWidth solid frameColor
    border-right        frameWidth solid frameColor
    border-bottom       frameWidth solid frameColor
    overflow            scroll
    pointer-events      auto
    min-height          ctrlHeight
    background          #000 // #181818
    color               #ddd 
    
